<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!--<android.support.v4.view.ViewPager-->
    <com.example.jake.viewpagerindicator2.AutoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        />
       <!-- android:layout_weight="1"-->

    <!--小圆圈高度为7dp,marginTop：-7dp 正好把指示点放在图片底部-->
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="0dip"
        android:layout_marginTop="-7dp"
        android:layout_height="7dp"
        android:layout_width="fill_parent"
        />

    <!--分类导航-->
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="5"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:id="@+id/type_nav"
        >

    </GridView>

    <!--导购-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="13">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:layout_rowSpan="2">
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/perm_group_camera_selected"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="淘抢购"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淘抢购"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tmall"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="8"
            android:layout_rowSpan="1">
            <TextView
                android:id="@+id/goodGoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/perm_group_camera_selected"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="淘抢购"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淘抢购"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tmall"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_rowSpan="1">
            <TextView
                android:id="@+id/likeShoping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/perm_group_camera_selected"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="淘抢购"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淘抢购"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tmall"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_rowSpan="1">
            <TextView
                android:id="@+id/mustBuyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/perm_group_camera_selected"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="淘抢购"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淘抢购"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tmall"/>
        </LinearLayout>


    </GridLayout>

</LinearLayout>